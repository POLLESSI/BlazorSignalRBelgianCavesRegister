@page "/bibliography"
@using BlazorSignalRBelgianCavesRegister.Client.Models

<h3>Bibliographies List</h3>
<table class="table table-striped table-bordered">
    <tr>
        <th>Title</th>
        <th></th>
    </tr>
    @foreach (BibliographyModel bl in BibliographyList)
    {
        <tr>
            <td>@bl.Title</td>
            <td><button class="btn btn-sm btn-outline-info" @onclick="() => ClickInfo(bl.Bibliography_Id)">Info</button></td>
        </tr>
    }
    
</table>

<hr />
@if(SelectedId > 0)
{
    <BibliographyDetail Bibliography_Id="SelectedId"></BibliographyDetail>
}

